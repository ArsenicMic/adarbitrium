<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
	
	  <servlet>
	    <servlet-name>Accueil</servlet-name>
	    <servlet-class>be.adarbitrium.servlets.Accueil</servlet-class>
	  </servlet>
	  
	  <servlet>
	    <servlet-name>Login</servlet-name>
	    <servlet-class>be.adarbitrium.servlets.Login</servlet-class>
	  </servlet>
	  
	  <servlet>
	    <servlet-name>Exercices</servlet-name>
	    <servlet-class>be.adarbitrium.servlets.Exercices</servlet-class>
	  </servlet>
	  
	  <servlet>
	    <servlet-name>DeclinaisonNoms</servlet-name>
	    <servlet-class>be.adarbitrium.servlets.DeclinaisonNoms</servlet-class>
	  </servlet>	
	    
	  <servlet>
	    <servlet-name>DeclinaisonAdjectifs</servlet-name>
	    <servlet-class>be.adarbitrium.servlets.DeclinaisonsAdjectifs</servlet-class>
	  </servlet>	

	  <servlet>
	    <servlet-name>ExerciceResult</servlet-name>
	    <servlet-class>be.adarbitrium.servlets.ExerciceResult</servlet-class>
	  </servlet>	
	    
	  
	  <servlet-mapping>
	    <servlet-name>Accueil</servlet-name>
	    <url-pattern></url-pattern>
	  </servlet-mapping>

	  <servlet-mapping>
	    <servlet-name>Login</servlet-name>
	    <url-pattern>/login</url-pattern>
	  </servlet-mapping>
	  
	  <servlet-mapping>
	  	<servlet-name>Exercices</servlet-name>
	  	<url-pattern>/exercices</url-pattern>
	  </servlet-mapping>
	  
	  <servlet-mapping>
	  	<servlet-name>DeclinaisonNoms</servlet-name>
	  	<url-pattern>/exercices/decl-noms</url-pattern>
	  </servlet-mapping>

	  <servlet-mapping>
	  	<servlet-name>DeclinaisonAdjectifs</servlet-name>
	  	<url-pattern>/exercices/decl-adj</url-pattern>
	  </servlet-mapping>

	  <servlet-mapping>
	  	<servlet-name>ExerciceResult</servlet-name>
	  	<url-pattern>/exercices/result</url-pattern>
	  </servlet-mapping>


</web-app>